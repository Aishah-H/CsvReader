@model IEnumerable<CsvReaderApp.Models.User>

    @{
    ViewData["Title"] = "Home Page";
}

<h3>Please enter your username and password:</h3>

<form method="post" asp-action="Login" asp-controller="Home">
    <div class="form-group">
        <label for="username">Username:</label>
        <input required type="text" class="form-control" id="username" name="username" required>
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input required type="password" class="form-control" id="password" name="password" required>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>